varnishtest "kv"

server s1 {
	rxreq
	txresp
} -start

server s2 {
	rxreq
	txresp
} -start

varnish v1 -vcl {
	import director from "${vmod}";

	backend b1 {
		.host = "${s1_addr}";
		.port = "${s1_port}";
	}

	backend b2 {
		.host = "${s2_addr}";
		.port = "${s2_port}";
	}

	sub vcl_init {
		new pool = director.pool();
		pool.add_backend(b1);
		pool.add_backend(b2);
	}

	sub vcl_recv {
		set req.backend_hint = pool.backend();
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -run
